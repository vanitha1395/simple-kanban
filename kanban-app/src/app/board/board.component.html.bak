<div class="kanban-board">
  <!-- Add Task Component at the top -->
  <app-add-task
    (taskAdded)="onTaskAdded($event)"
    (cancel)="cancelTask()">
  </app-add-task>

  <!-- Kanban columns container -->
  <div class="columns-container">
    <div *ngFor="let column of columns" class="column">
      <h2>{{ column.title }}</h2>
      <div class="tasks">
        <app-task *ngFor="let task of column.tasks" [task]="task" (delete)="onTaskDelete($event)"></app-task>
      </div>
    </div>
  </div>
</div>
